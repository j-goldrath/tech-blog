<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div id="create-post-header">
                    <span class="card-title">Update/Delete Post</span>
                </div>
                <div id="p-divider" class="divider"></div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <p>Title:</p>
                        <p contenteditable="true" id="edit-post-title">{{post.title}}</p>
                    </div>


                    <div class="input-field col s12">
                        <p>Content:</p>
                        <p contenteditable="true" id="edit-post-content">{{post.content}}</p>
                    </div>

                    <div class="input-field col s4">
                        <button id="canel-edit-post-button" class="btn waves-effect waves-light fwb orange"
                            type="button" name="action">Cancel</button>
                    </div>

                    <div class="input-field col s4">
                        <button id="delete-post-button" class="btn waves-effect waves-light fwb red" type="button"
                            name="action">Delete</button>
                    </div>

                    <div class="input-field col s4">
                        <button id="update-post-button" class="btn waves-effect waves-light fwb green" type="submit"
                            name="action">Update</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="js/editPost.js"></script>