<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div id="create-post-header">
                    <span class="card-title">My Posts</span>
                </div>
                <div id="p-divider" class="divider"></div>
                <div class="row">
                    <div class="col s12">
                        <div class="collection">
                            {{#each posts as |post|}}
                            <a href="/posts/{{post.id}}" class="collection-item">{{post.title}}<div
                                    class="secondary-content">
                                    {{post.created_at}}</div></a>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <!-- new post button component -->
                <div class="row">
                    <div class="col s12 m10 offset-m1">
                        <button class="btn waves-effect waves-light fwb green" type="submit" name="action">Create
                            New Post</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>