{{!-- post section --}}
<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div id="post-header-wrapper">
                    <div id="post-title">
                        <span class="card-title">{{posts.title}}</span>
                    </div>
                    <div id="post-author">
                        <span class="card-text">Posted by <a>{{posts.user.displayName}}</a> on
                            {{posts.created_at}}</span>
                    </div>
                </div>
                <div id="post-content" class="white black-text">
                    <p>{{posts.content}}</p>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- comment section --}}
<div class="row">
    <div class="col s12 m11 offset-m1 comment-card">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div id="post-header-wrapper">
                    <div id="post-title">
                        <span class="card-title">Comments</span>
                    </div>
                </div>
                {{#each posts.comments as |comment|}}
                <div id="comment-content" class="white black-text">
                    <p>{{comment.body}}</p>
                    <p class="comment-author">- {{comment.user.displayName}}, {{comment.created_at}}</p>
                </div>
                {{/each}}
                <div class="row">
                    <div class="col s12 m8 offset-m2">
                        <button class="btn waves-effect waves-light fwb green" type="submit" name="action">Add A
                            Comment</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>