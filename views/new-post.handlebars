<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div id="create-post-header">
                    <span class="card-title">Create New Post</span>
                </div>
                <div id="p-divider" class="divider"></div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <p>Title:</p>
                        <p contenteditable="true" id="new-post-title"></p>
                    </div>


                    <div class="input-field col s12">
                        <p>Content:</p>
                        <p contenteditable="true" id="new-post-content"></p>
                    </div>

                    <div class="input-field col s6">
                        <button id="cancel-new-post-button" class="btn waves-effect waves-light fwb orange"
                            type="button" name="action">Cancel</button>
                    </div>

                    <div class="input-field col s6">
                        <button id="create-new-post-button" class="btn waves-effect waves-light fwb green" type="submit"
                            name="action">Create</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="js/createPost.js"></script>