{{#each posts as |post| }}
<div class="row">
                <div class="col s12">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <div id="post-header-wrapper">
                                <div id="post-title">
                                    <a href="/post/{{id}}"><span class="card-title">{{title}}</span></a>
                                </div>
                                <div id="post-author">
                                    <span class="card-text">Posted by <a>{{user.getDisplayName()}}</a> on {{createdAt}}</span>
                                </div>
                            </div>
                            <div id="post-content" class="white black-text">
                                <p>{{content}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
{{/each}}
